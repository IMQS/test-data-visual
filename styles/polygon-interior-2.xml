<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map background-color="white" srs="+proj=latlong +datum=WGS84">
    <Parameters>
        <Parameter name="sizes">800, 800</Parameter>
        <Parameter name="bbox">-1.05, -1.05, 1.05, 1.05</Parameter>
    </Parameters>

    <Layer name="layer" srs="+proj=latlong +datum=WGS84">
        <StyleName>lines</StyleName>
        <Datasource>
            <Parameter name="type">csv</Parameter>
            <Parameter name="inline">
                wkt
                "POLYGON((1 0, 0 -1, -1 0, 0 1, 0.8 0, 0 0.8, -0.8 0, 0 -0.8, 1 0))"
            </Parameter>
        </Datasource>
    </Layer>

    <Style name="lines">
        <Rule>
            <LineSymbolizer
                stroke-width="2"
                stroke="red"
                />

            <MarkersSymbolizer
                placement="interior"
                ignore-placement="true"
                allow-overlap="true"
                fill="blue"
                width="15"
                height="15"
                />
            <MarkersSymbolizer
                placement="point"
                ignore-placement="true"
                allow-overlap="true"
                fill="green"
                width="15"
                height="15"
                />
            <MarkersSymbolizer
                placement="polylabel"
                ignore-placement="true"
                allow-overlap="true"
                fill="red"
                width="15"
                height="15"
                />

            <TextSymbolizer
                placement="interior"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="blue"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Interior"
            </TextSymbolizer>
            <TextSymbolizer
                placement="centroid"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="green"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Centroid"
            </TextSymbolizer>
            <TextSymbolizer
                placement="polylabel"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="red"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Polylabel"
            </TextSymbolizer>
        </Rule>
    </Style>

</Map>
